                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border2}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background2}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border2}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background2}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border2}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground2}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainWindow1" Margin="0,0,0,-6" Background="#FFFFC328">
        <Button Style="{DynamicResource ButtonStyle1}" Content="Adminà Page" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="66" Width="240" Click="Button_Click_2" FontFamily="Algerian" FontSize="16" Foreground="#FFFCF7F7" Background="#FF188EF7"/>
        <Button Style="{DynamicResource ButtonStyle2}" Content="Userà Page" HorizontalAlignment="Left" Margin="275,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.616,-0.604" Height="66" Width="240" Click="Button_Click" Background="#FF1EB6FF" FontFamily="Algerian" FontSize="18"/>
        <Button Style="{DynamicResource ButtonStyle3}" Content="About Me" HorizontalAlignment="Left" Margin="541,41,0,0" VerticalAlignment="Top" Height="66" Width="249" Click="Button_Click_1" FontFamily="Algerian" FontSize="18" Foreground="#FFF6F6F6" Background="#FF3FADEB"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="7,120,0,0" VerticalAlignment="Top" Height="71" Width="776" Click="Button_Click_3" Background="#FFFC0505" Foreground="#FFF1F0F0" FontSize="48" FontFamily="Algerian"/>

    </Grid>
